{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "pnpm",
    "schematicCollections": [
      "angular-eslint"
    ],
    "analytics": false
  },
  "newProjectRoot": ".",
  "projects": {
    "ng-ui": {
      "projectType": "library",
      "root": "./ng-ui",
      "sourceRoot": "./ng-ui/src",
      "prefix": "ku",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "./ng-ui/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "./ng-ui/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "./ng-ui/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "./ng-ui/tsconfig.spec.json",
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ]
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "./ng-ui/**/*.ts",
              "./ng-ui/**/*.html"
            ],
            "eslintConfig": "./ng-ui/eslint.config.js"
          }
        },
        "storybook": {
          "builder": "@storybook/angular:start-storybook",
          "options": {
            "configDir": "./ng-ui/.storybook",
            "browserTarget": "ng-ui:build",
            "compodoc": false,
            "port": 6006,
            "styles": ["./styles.css"]
          }
        },
        "build-storybook": {
          "builder": "@storybook/angular:build-storybook",
          "options": {
            "configDir": "./ng-ui/.storybook",
            "browserTarget": "ng-ui:build",
            "compodoc": false,
            "outputDir": "storybook-static",
            "styles": ["./styles.css"]
          }
        }
      }
    }
  }
}
